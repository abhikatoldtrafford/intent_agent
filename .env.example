# Intent-Routed Agent POC - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: OpenAI API Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# ============================================================================
# Service Configuration
# ============================================================================
# Metrics API URL (local FastAPI server)
METRICS_API_URL=http://127.0.0.1:8001

# Database path (SQLite)
DB_PATH=data/metrics.db

# Documentation directory
DOCS_PATH=data/docs

# Embeddings cache directory
EMBEDDINGS_PATH=data/embeddings

# ============================================================================
# LangSmith Tracing (Enabled by default)
# ============================================================================
# Enable LangSmith tracing
LANGCHAIN_TRACING_V2=true

# LangSmith API key (get from: https://smith.langchain.com/)
# Leave empty to disable tracing to LangSmith servers
LANGCHAIN_API_KEY=

# LangSmith project name
LANGCHAIN_PROJECT=intent-agent-poc

# ============================================================================
# Agent Configuration
# ============================================================================
# Maximum number of retry attempts on low confidence
MAX_RETRIES=2

# Confidence thresholds
CONFIDENCE_HIGH=0.8
CONFIDENCE_MEDIUM=0.6
CONFIDENCE_LOW=0.4

# ============================================================================
# OpenTelemetry (Enabled by default - console exporter)
# ============================================================================
# Service name for distributed tracing
OTEL_SERVICE_NAME=intent-agent

# Exporter type: console, jaeger, otlp
OTEL_EXPORTER=console

# Enable OpenTelemetry
ENABLE_OPENTELEMETRY=true
